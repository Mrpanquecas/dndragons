// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Character {
  id        String @id @default(cuid())
  name      String
  race      String
  class     String
  gender    String
  hitpoints Int
  armor     Int
  alignment String
  xp        String

  initiative Int
  ac         Int
  speed      Int

  maxHp     Int
  currentHp Int

  str Int
  dex Int
  con Int
  int Int
  wis Int
  cha Int

  cantrips String[]

  owner   User?   @relation(fields: [ownerId], references: [id])
  ownerId String?
}

model User {
  id         String      @id @default(cuid())
  name       String?
  email      String?     @unique
  createdAt  DateTime    @default(now()) @map(name: "created_at")
  updatedAt  DateTime    @updatedAt @map(name: "updated_at")
  characters Character[]

  @@map(name: "users")
}
